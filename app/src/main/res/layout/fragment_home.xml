<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="mx.alxr.voicenotes.feature.working.records.RecordsFragment"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/record_audio_view"
        android:layout_width="@dimen/microphone_widget_size"
        android:layout_height="@dimen/microphone_widget_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:alpha="@dimen/record_button_alpha"
        android:background="@drawable/microphone_background" />

    <View
        android:id="@+id/cancel_recording_view"
        android:layout_width="@dimen/cancel_record_widget_size"
        android:layout_height="@dimen/cancel_record_widget_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/cancel_recording_background"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>